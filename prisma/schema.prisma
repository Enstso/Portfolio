generator client {
  provider = "postgres"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String
  password String
  verif String
}

model Category {
  id Int @id @default(autoincrement())
  name String
  type Type
}

model Article {
  id Int @id @default(autoincrement())
  content String
  date Date
  category Category @relation(fields:[categoryId],references:[id])
  categoryId Int
  createAt DateTime @default(now())
  updatedAt DateTime @updateAt
}

model Project {
  id Int @id @default(autoincrement())
  introduction String
  url String
  date Date
  category Category @relation(fields:[categoryId],references:[id])
  categoryId Int
  createAt DateTime @default(now())
  updatedAt DateTime @updateAt
}

enum Type {
  ARTICLE
  PROJECT
}